@inherits LayoutComponentBase

<PageTitle>Prediktor studijních výsledků</PageTitle>

<MudThemeProvider Theme="new MudTheme()" IsDarkMode="true" />
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Color="Color.Primary" Dense="true" Fixed="true">
        <b>Prediktor studijních výsledků</b>
    </MudAppBar>
    <MudDrawer ClipMode="DrawerClipMode.Always" Variant="DrawerVariant.Mini">
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard" Text="Dashboard" />
            <MudNavLink Href="/datasets" Icon="@Icons.Material.Filled.FileUpload" Text="Datasets" />
            <MudNavLink Href="/history" Icon="@Icons.Material.Filled.History" Text="Prediction History" />
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>